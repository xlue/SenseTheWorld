<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS Libs -->
    <link rel="stylesheet" type="text/css" href="/Content/lib/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/lib/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/lib/css/animate.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/lib/css/bootstrap-switch.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/lib/css/checkbox3.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/lib/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/lib/css/dataTables.bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/Content/lib/css/select2.min.css">
    <!-- CSS App -->
    <link rel="stylesheet" type="text/css" href="/Content/css/style.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/themes/flat-blue.css">
    <link href="/Content/control/simditor/styles/simditor.css" rel="stylesheet" />

    @RenderSection("StyleHead", false)@*View页面自定义特定js/css使用*@
</head>
<body class="flat-blue">
    <div class="app-container">
        <div class="row content-container">
            <nav class="navbar navbar-default navbar-fixed-top navbar-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-expand-toggle">
                            <i class="fa fa-bars icon"></i>
                        </button>
                        <ol class="breadcrumb navbar-breadcrumb">
                            <li class="active">控制面板</li>
                        </ol>
                        <button type="button" class="navbar-right-expand-toggle pull-right visible-xs">
                            <i class="fa fa-th icon"></i>
                        </button>
                    </div>
                    <ul class="nav navbar-nav navbar-right">
                        <button type="button" class="navbar-right-expand-toggle pull-right visible-xs">
                            <i class="fa fa-times icon"></i>
                        </button>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-comments-o"></i></a>
                            <ul class="dropdown-menu animated fadeInDown">
                                <li class="title">
                                    Notification <span class="badge pull-right">0</span>
                                </li>
                                <li class="message">
                                    No new notification
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown danger">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-star-half-o"></i> 4</a>
                            <ul class="dropdown-menu danger  animated fadeInDown">
                                <li class="title">
                                    Notification <span class="badge pull-right">4</span>
                                </li>
                                <li>
                                    <ul class="list-group notifications">
                                        <a href="#">
                                            <li class="list-group-item">
                                                <span class="badge">1</span> <i class="fa fa-exclamation-circle icon"></i> new registration
                                            </li>
                                        </a>
                                        <a href="#">
                                            <li class="list-group-item">
                                                <span class="badge success">1</span> <i class="fa fa-check icon"></i> new orders
                                            </li>
                                        </a>
                                        <a href="#">
                                            <li class="list-group-item">
                                                <span class="badge danger">2</span> <i class="fa fa-comments icon"></i> customers messages
                                            </li>
                                        </a>
                                        <a href="#">
                                            <li class="list-group-item message">
                                                view all
                                            </li>
                                        </a>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown profile">
                            @if (SenseLue.Code.OperatorProvider.Provider.GetCurrent() != null)
                            {
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@SenseLue.Code.OperatorProvider.Provider.GetCurrent().PenName <span class="caret"></span></a>
                                <ul class="dropdown-menu animated fadeInDown">
                                    <li class="profile-img">
                                        <img src="@SenseLue.Code.OperatorProvider.Provider.GetCurrent().HeadIcon" class="profile-img">
                                    </li>
                                    <li>
                                        <div class="profile-info">
                                            <h4 class="username">@SenseLue.Code.OperatorProvider.Provider.GetCurrent().PenName</h4>
                                            <p>@SenseLue.Code.OperatorProvider.Provider.GetCurrent().Email</p>
                                            <div class="btn-group margin-bottom-2x" role="group">
                                                <button type="button" class="btn btn-default"><i class="fa fa-user"></i> 基本资料</button>
                                                <button type="button" class="btn btn-default" onclick="Exit()"><i class="fa fa-sign-out"></i> 退出</button>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            }

                        </li>
                    </ul>
                </div>
            </nav>
            <div class="side-menu sidebar-inverse">
                <nav class="navbar navbar-default" role="navigation">
                    <div class="side-menu-container">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="#">
                                <div class="icon fa fa-paper-plane"></div>
                                <div class="title">Lue Backstage</div>
                            </a>
                            <button type="button" class="navbar-expand-toggle pull-right visible-xs">
                                <i class="fa fa-times icon"></i>
                            </button>
                        </div>
                        <ul class="nav navbar-nav">
                            <li class="active">
                                <a href="/Home/Index">
                                    <span class="icon fa fa-tachometer"></span><span class="title">后台主页</span>
                                </a>
                            </li>
                            <li class="panel panel-default dropdown">
                                <a data-toggle="collapse" href="#dropdown-element">
                                    <span class="icon fa fa-desktop"></span><span class="title">www.Lueii.com</span>
                                </a>
                                <!-- Dropdown level 1 -->
                                <div id="dropdown-element" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <ul class="nav navbar-nav">
                                            @*<li>
                                                <a href="/WWW/MinWorld">小字编辑</a>
                                            </li>*@
                                            <li>
                                                <a href="/WWW/MinNote">小记编辑</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                </nav>
            </div>
            <!-- Main Content -->
            <div class="container-fluid">
                <div class="side-body padding-top">
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer class="app-footer">
            <div class="wrapper">
                © 2017 Lue. <a href="#" title="江西" target="_blank">江西</a>
            </div>
        </footer>
    </div>

    <!-- Javascript Libs -->

    <script src="~/Content/lib/js/jquery.min.js"></script>
    <script type="text/javascript" src="/Content/lib/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/Content/lib/js/Chart.min.js"></script>
    <script type="text/javascript" src="/Content/lib/js/bootstrap-switch.min.js"></script>
    <script type="text/javascript" src="/Content/lib/js/jquery.matchHeight-min.js"></script>
    <script type="text/javascript" src="/Content/lib/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/Content/lib/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript" src="/Content/lib/js/select2.full.min.js"></script>
    <script type="text/javascript" src="/Content/lib/js/ace/ace.js"></script>
    <script type="text/javascript" src="/Content/lib/js/ace/mode-html.js"></script>
    <script type="text/javascript" src="/Content/lib/js/ace/theme-github.js"></script>
    <!-- Javascript -->
    <script type="text/javascript" src="/Content/js/app.js"></script>
    <script type="text/javascript" src="/Content/js/index.js"></script>


    <script src="/Content/lib/js/jquery-3.2.1.min.js"></script>
    <script src="/Content/control/simditor/scripts/module.min.js"></script>
    <script src="/Content/control/simditor/scripts/hotkeys.min.js"></script>
    <script src="/Content/control/simditor/scripts/simditor.min.js"></script>
    <script>
        function Exit() {
            $.ajax({
                type: 'POST',
                url: '/Login/ExitLogin',
                success: function () {
                    window.location.href = '/Login/Index';
                }
            })
        }
    </script>

    @RenderSection("ScriptBody", false)@*View页面自定义特定js/css使用*@

</body>
</html>
