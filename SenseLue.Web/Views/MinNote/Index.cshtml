@using SenseLue.Domain.ViewModel;

@{
    ViewBag.Title = "小记 · 未来已来，只是还未流行";
    ViewBag.MinNote = "active";
    Layout = "~/Views/Layout/_LayoutHome.cshtml";
}
@section StyleHead{
    <style>
    </style>
}
@section ScriptBody{}
<section id="intro">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 text-center">
                <div class="intro animate-box">
                    <h3>她像一个老朋友一样，总是不厌其烦的聆听着你的每一次高兴或者忧伤的话语。</h3>
                </div>
            </div>
        </div>
    </div>
</section>



@foreach (var minNote in ViewBag.MinNotes as List<MinNoteViewModel>)
{
    <div class="col-md-12 animate-box " style="margin-bottom:20px;">
        <div class="work">
            <span><a href="/MinNote/ViewNote/@minNote.F_Id">@minNote.F_Title</a></span><br />
            <span>
                @minNote.F_Descripition
            </span><br />
            <span style="font-size:14px;">
                @minNote.F_Date | @minNote.F_AuthorName | 阅读人数_100 |
                @foreach (var label in @minNote.F_SenseLabel)
                {
                    <span style="font-size:12px;color:white;background-color:#1362b8;padding:1px 3px;border-radius:3px;">@label</span>
                }
            </span>
        </div>
    </div>
}



